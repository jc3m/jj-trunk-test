{
  "name": "calculator-app",
  "version": "1.0.0",
  "description": "A simple calculator app with tests",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest src",
    "test:run": "vitest run src",
    "test:watch": "vitest src --watch",
    "test:coverage": "vitest run src --coverage",
    "test:junit": "vitest run src --reporter junit --outputFile=junit.xml",
    "dev": "tsc --watch"
  },
  "keywords": ["calculator", "typescript", "vitest"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

